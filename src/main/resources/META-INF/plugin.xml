<idea-plugin>
    <id>it.unisa.gaia.tdd</id>
    <name>GAI4-TDD</name>
    <version>0.3.0</version>
    <vendor email="pcassieri@unisa.it" url="https://hauntlight.github.io/">Pietro Cassieri</vendor>

    <description><![CDATA[
      Plugin to use GPT to code TDD pipeline. Refactored for modern IntelliJ versions.
    ]]></description>

    <!-- Dependencies -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="it.unisa.gaia.tdd.GAIA" displayName="GAI4-TDD" />
        <applicationService serviceImplementation="it.unisa.gaia.tdd.gai4settings" />
        <toolWindow id="GAI4-TDD" anchor="right" factoryClass="it.unisa.gaia.tdd.view.GPTAssistantToolWindowFactory"/>
    </extensions>

    <actions>
        <group id="GPTAssistantGroup" text="GAI4-TDD" description="GPT Assistant Actions" popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last" />
        </group>
        <action id="GPTAssistantAction" class="it.unisa.gaia.tdd.control.GPTAssistantAction" text="GAI4-TDD" description="Run GAI4 Assistant">
            <add-to-group group-id="GPTAssistantGroup" anchor="last" />
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G" />
        </action>
    </actions>
</idea-plugin>